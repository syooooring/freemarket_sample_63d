.zoom__top
  = render "shared/header-login"

.top-ber
  %ul.top-ber__box
    %li
      =link_to "フリーマーケット",root_path
    .top-ber__box2
      %i= fa_icon "chevron-right", class:"arrow"
    .top-ber__box3
      = current_user.nickname

.zoom
  .zoom__right
    .zoom__right__up
      .zoom__right__up__profil
        .zoom__right__up__profil--user
          //ユーザーのプロフィール写真登録
        .zoom__right__up__profil--name
          = current_user.nickname
        .zoom__right__up__profil__box
          .zoom__right__up__profil__box--goods
            評価
          .zoom__right__up__profil__box--items
            出品数
          .zoom__right__up__profil__box--items--number
            = current_user.items.length
    .zoom__good
      .zoom__good__box
        .zoom__good__box__left
          .zoom__good__box__left--icon
          .zoom__good__box__left--number
            0
        .zoom__good__box__middle
          .zoom__good__box__middle--icon
          .zoom__good__box__middle--number
            0
        .zoom__good__box__right
          .zoom__good__box__right--icon
          .zoom__good__box__right--number
            0
    .zoom__sns
      .zoom__sns__icon
        .zoom__sns__icon--fb
          = image_tag "f_logo_RGB-Blue_1024.png", class: "zoom__fb"
        .zoom__sns__icon--tw
          = image_tag "Twitter_Logo_WhiteOnBlue.png", class: "zoom__tw"
        .zoom__sns__icon--line
          = image_tag "LINE_APP.png", class: "zoom--line"

.sell-icon
  = render "/shared/sell-icon"
  

.zoom__bottom
  = render "shared/footer"